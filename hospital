#include <iostream>
using namespace std;

void create();
void remove();
void edit();
void search();
void appointment();

struct patient
{
	string firstname;
	string lastname;
	int age;
	char gender;
};

int main ()
{
	int selection;
	cout << "----------------------------------\n";
	cout << "Welcome to Hospital Registration! \n";
	cout << "----------------------------------\n";
	
	
	
	while(selection < 6)
	{
		cout << "----------------------------------\n";
		cout << "How can we help you? \n";
		cout << "Please select from the below section : \n";
		cout << "(1) Create a new patient data \n";
		cout << "(2) Remove existing patient data\n";
		cout << "(3) Edit existing patient data\n";
		cout << "(4) Search for patient\n";
		cout << "(5) Appoint a patient to doctor" << endl;
		cout << "(0) To exit the system" << endl;
		cin >> selection;
		
		
		if(selection == 1)
		{
			create();
			system("cls");
		}
		else if (selection == 2)
		{
			remove();
			system("cls");
		}
		else if (selection == 3)
		{
			edit();
			system("cls");
		}
		else if (selection == 4)
		{
			search();
			system("cls");
		}
		else
		appointment();
		system("cls");
	}
	cout << "Thanks for using the service";
	return 0;
}

void create()
{
	cout << "pick 1";
}
void remove()
{
	cout << "pick 2";
}
void edit()
{
	cout << "pick 3";
}
void search()
{
	cout << "pick 4";
}
void appointment()
{
	cout << "pick 5";
}
