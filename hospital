#include <iostream>
#include <string>
using namespace std;

	struct Patient
{
	char name[50];
	int age;
	char gender;
}patientData[50];

void create();
void remove();
void edit();
void search();
void appointment();


int main ()
{
	
	
	int selection = 1;
	
	cout << "----------------------------------\n";
	cout << "Welcome to Hospital Registration! \n";
	
	
	
	while(selection >= 1 && selection <= 5)
	{
		cout << "----------------------------------\n";
		cout << "How can we help you? \n";
		cout << "Please select from the below section : \n";
		cout << "(1) Create a new patient data \n";
		cout << "(2) Remove existing patient data\n";
		cout << "(3) Edit existing patient data\n";
		cout << "(4) Search for patient\n";
		cout << "(5) Appoint a patient to doctor" << endl;
		cout << "(0) To exit the system" << endl;
		cout << "----------------------------------\n";
		cin >> selection;
		
		
		if(selection == 1)
		{
			create();
			system("cls");
		}
		else if (selection == 2)
		{
			remove();
			system("cls");
		}
		else if (selection == 3)
		{
			edit();
			system("cls");
		}
		else if (selection == 4)
		{
			search();
			system("cls");
		}
		else
		appointment();
		system("cls");
	}
	cout << "Thanks for using the service";
	return 0;
}

void create()
{
	int i;
	char key;
	
	system("cls");
	cout << "************************************" << endl;
	cout << "****Patient Data Registry System****\n";
	cout << "************************************" << endl << endl;
	
	while ( key != 'n' && key != 'N')
	{
	
	cout << "Please Enter Patient Name : ";
	cin>> patientData[i].name;
	cout << "Gender : ";
	cin >> patientData[i].gender;
	i++;
	cout << "Continue to add patient? (y/n) : ";
	cin >> key;
	cout << endl;
}
}
void remove()
{
	system("cls");
	char name[50];
	int size = 50; 
	cout << "Please enter the name of patient to be remove : ";
	cin >> name;
	for (int i = 0; i < size; i++ )
	{
		if(patientData[i].name == name)
		{
			for(int j=i; j < size-1; j++)
			{
				
				patientData[j].gender = patientData[j+1].gender;
			}
		size--;
		break;	
		}
	}
	cout << "\nPress any key to continue";
	getchar();
	system("pause");
}
void edit()
{
	cout << "pick 3";
}
void search()
{
	system("cls");

	int i;
	cout << "These are the lists of patient registered : \n\n";
	
	for(int i = 0; i < 50; i++)
	{
	cout << "Detail for Patient no" << i+1 << endl;
	cout << "Name   : " << patientData[i].name << endl;
	cout << "Gender : " << patientData[i].gender << endl;
}
	cout << "Press any key to continue";
	getchar();
	system("pause");
}

void appointment()
{
	cout << "pick 5";
}
