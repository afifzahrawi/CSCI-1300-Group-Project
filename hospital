#include <iostream>
#include <string>
using namespace std;

	struct Patient
{
	string firstname;
	string lastname;
	int age;
	char gender;
};

void create(Patient *);
void remove();
void edit();
void search();
void appointment();



const int SIZE = 50;
	
int main ()
{
	Patient *patientData;
	
	int selection = 1;
	
	cout << "----------------------------------\n";
	cout << "Welcome to Hospital Registration! \n";
	
	
	
	while(selection >= 1 && selection <= 5)
	{
		cout << "----------------------------------\n";
		cout << "How can we help you? \n";
		cout << "Please select from the below section : \n";
		cout << "(1) Create a new patient data \n";
		cout << "(2) Remove existing patient data\n";
		cout << "(3) Edit existing patient data\n";
		cout << "(4) Search for patient\n";
		cout << "(5) Appoint a patient to doctor" << endl;
		cout << "(0) To exit the system" << endl;
		cout << "----------------------------------\n";
		cin >> selection;
		
		
		if(selection == 1)
		{
			create(patientData);
			system("cls");
		}
		else if (selection == 2)
		{
			remove();
			system("cls");
		}
		else if (selection == 3)
		{
			edit();
			system("cls");
		}
		else if (selection == 4)
		{
			search();
			system("cls");
		}
		else
		appointment();
		system("cls");
	}
	cout << "Thanks for using the service";
	return 0;
}

void create(Patient *patientData)
{
	int i ;
	int ans = 1;
	char key;
	for (int i = 0; i < SIZE; i++)
	{
	while ( ans == 1)
	{
	
	cout << "Create a new Patient : " << endl;
	cout << "First name : ";
	getline(cin,patientData->firstname);
	cout << "\nLast name : ";
	getline(cin,patientData->lastname);
	cout << "Continue? (y/n) : ";
	cin.get(key);
	if (key == 'y' || key == 'Y')
	{
		ans = 1;
	}
	else 
	
	ans = 0;	
}
}
}
void remove()
{
	cout << "pick 2";
}
void edit()
{
	cout << "pick 3";
}
void search()
{
	cout << "pick 4";
}
void appointment()
{
	cout << "pick 5";
}
